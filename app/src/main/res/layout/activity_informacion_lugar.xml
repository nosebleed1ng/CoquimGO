<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InformacionLugarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- boton para volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volver"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/azulOscuro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- imagen del lugar -->
        <ImageView
            android:id="@+id/imgLugar"
            android:layout_width="0dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@id/btnVolver"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- nombre -->
        <TextView
            android:id="@+id/txtNombreLugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Lugar"
            android:textColor="@color/azulOscuro"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgLugar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />

        <!-- descripci贸n -->
        <TextView
            android:id="@+id/txtDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descripci贸n del lugar."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtNombreLugar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ubicaci贸n -->
        <TextView
            android:id="@+id/txtUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubicaci贸n:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/txtDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- jorarios -->
        <TextView
            android:id="@+id/txtHorarios"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Horarios:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtUbicacion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- costos -->
        <TextView
            android:id="@+id/txtCostos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Costos:"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/txtHorarios"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>